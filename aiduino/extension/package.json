{
  "name": "aiduino",
  "displayName": "AI.duino",
  "description": "AI-powered assistance for Arduino with Claude, ChatGPT, and other AIs: improve code, explain errors, debug help",
  "version": "2.2.0",
  "publisher": "MonsterMaker",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Education"
  ],
  "keywords": [
    "arduino",
    "arduinoIDE",
    "ai",
    "claude",
    "chatgpt",
    "gemini",
    "mistral",
    "perplexity",
    "groq",
    "cohere",
    "debug",
    "error",
    "help",
    "assistant"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "aiduino-activitybar": [
        {
          "id": "aiduino.quickMenuView",
          "name": "AI.duino Quick Menu",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiduino-activitybar",
          "title": "AI.duino",
          "icon": "./icons/aiduino-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "aiduino.quickMenu",
        "title": "ðŸ¤– AI.duino",
        "category": "AI.duino",
        "icon": "$(robot)"
      },
      {
        "command": "aiduino.switchModel",
        "title": "Switch AI Model",
        "category": "AI.duino",
        "icon": "$(sync)"
      },
      {
        "command": "aiduino.setApiKey",
        "title": "Enter API Key",
        "category": "AI.duino",
        "icon": "$(key)"
      },
      {
        "command": "aiduino.improveCode",
        "title": "Improve Code",
        "category": "AI.duino",
        "icon": "$(symbol-method)"
      },
      {
        "command": "aiduino.explainCode",
        "title": "Explain Code",
        "category": "AI.duino",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aiduino.addComments",
        "title": "Add Comments",
        "category": "AI.duino",
        "icon": "$(edit)"
      },
      {
        "command": "aiduino.explainError",
        "title": "Explain Error",
        "category": "AI.duino",
        "icon": "$(error)"
      },
      {
        "command": "aiduino.explainCopiedError",
        "title": "%commands.explainCopiedError%",
        "category": "Ai.duino"
      },
      {
        "command": "aiduino.askAI",
        "title": "Ask AI",
        "category": "AI.duino",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aiduino.openChatPanel",
        "title": "Open AI Chat Panel",
        "category": "AI.duino",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aiduino.debugHelp",
        "title": "Debug Help",
        "category": "AI.duino",
        "icon": "$(bug)"
      },
      {       
        "command": "aiduino.runCustomAgent",
        "title": "Run Custom Agent",
        "category": "AI.duino",
        "icon": "$(robot)"
      },
      {
        "command": "aiduino.manageCustomAgents",
        "title": "Manage Custom Agents",
        "category": "AI.duino",
        "icon": "$(robot)"
      },
      {
        "command": "aiduino.switchLanguage",
        "title": "Switch Language",
        "category": "AI.duino",
        "icon": "$(globe)"
      },
      {
        "command": "aiduino.editPrompts",
        "title": "Edit Prompts",
        "category": "AI.duino",
        "icon": "$(edit)"
      },
      {
        "command": "aiduino.showTokenStats",
        "title": "Show Token Statistics",
        "category": "AI.duino",
        "icon": "$(graph)"
      },
      {
        "command": "aiduino.about",
        "title": "About AI.duino...",
        "category": "AI.duino",
        "icon": "$(info)"
      },
      {
        "command": "aiduino.toggleInlineCompletion",
        "title": "Toggle Inline Completion",
        "category": "AI.duino",
        "icon": "$(wand)"
      },
      {
        "command": "aiduino.openSettings",
        "title": "Open Settings",
        "category": "AI.duino"
      }
    ],
    "keybindings": [
      {
        "command": "aiduino.quickMenu",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus && resourceExtname == .ino"
      },
      {
        "command": "aiduino.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus && resourceExtname == .ino"
      },
      {
        "command": "aiduino.askAI",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "aiduino.openChatPanel", 
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      },
      {
        "command": "aiduino.explainCopiedError",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus && resourceExtname == .ino"
      },
      {
        "command": "aiduino.openSettings",
        "key": "ctrl+shift+,",
        "mac": "cmd+shift+,",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "aiduino.quickMenu",
          "group": "1_modification",
          "when": "resourceExtname == .ino"
        },
        {
          "command": "aiduino.quickMenu",
          "group": "1_modification",
          "when": "resourceExtname == .cpp"
        },
        {
          "command": "aiduino.quickMenu",
          "group": "1_modification",
          "when": "resourceExtname == .h"
        },
        {
          "command": "aiduino.quickMenu",
          "group": "1_modification",
          "when": "resourceExtname == .c"
        }
      ]
    },
    "configuration": {
      "title": "AI.duino",
      "properties": {
        "aiduino.defaultModel": {
          "type": "string",
          "default": "claude",
          "description": "Default AI model on startup"
        },
        "aiduino.language": {
          "type": "string",
          "default": "auto",
          "description": "Language for plugin UI and AI responses. Use 'auto' for VS Code language detection, or specify a language code (e.g., 'en', 'de', 'fr', 'ro'). Available languages are automatically detected from the locales folder."
        },
        "aiduino.maxTokensPerRequest": {
          "type": "number",
          "default": 2000,
          "minimum": 500,
          "maximum": 4000,
          "description": "Maximum tokens per AI request"
        },
        "aiduino.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 1,
          "description": "AI creativity level (0 = deterministic, 1 = creative)"
        },
        "aiduino.maxCustomAgents": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum number of custom agents (1-100)"
        },
        "aiduino.tokenEstimationMultiplier": {
          "type": "number",
          "default": 0.75,
          "minimum": 0.1,
          "maximum": 2,
          "description": "Multiplier for word-to-token estimation"
        },
        "aiduino.tokenEstimationCodeBlock": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "Additional tokens per code block"
        },
        "aiduino.tokenEstimationSpecialChars": {
          "type": "number",
          "default": 0.2,
          "minimum": 0.1,
          "maximum": 1,
          "description": "Multiplier for special characters"
        },
        "aiduino.customInstructionsEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable custom instructions for code improvements"
        },
        "aiduino.inlineCompletion.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable inline code completion (uses current AI provider)"
        },
        "aiduino.inlineCompletionEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable inline code completion"
        },
        "aiduino.inlineCompletionProvider": {
          "type": "string",
          "default": "groq",
          "description": "Provider for inline completion"
        },
        "aiduino.apiTimeout": {
          "type": "number",
          "default": 30000,
          "minimum": 5000,
          "maximum": 120000,
          "description": "API request timeout in milliseconds"
        },
        "aiduino.apiMaxRetries": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "maximum": 10,
          "description": "Maximum number of retry attempts on API errors"
        },
        "aiduino.maxChats": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum number of stored chat conversations"
        },
        "aiduino.maxMessagesPerChat": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 1000,
          "description": "Maximum messages per chat (older messages are deleted)"
        },
        "aiduino.inlineCompletionDelay": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 2000,
          "description": "Delay between inline completions in milliseconds"
        },
        "aiduino.inlineCompletionContextLines": {
          "type": "number",
          "default": 20,
          "minimum": 5,
          "maximum": 50,
          "description": "Number of lines before cursor to use as context"
        },
        "aiduino.inlineCompletionMinCommentLength": {
          "type": "number",
          "default": 10,
          "minimum": 2,
          "maximum": 20,
          "description": "Minimum comment length to trigger completion"
        },
        "aiduino.inlineCompletionMaxLinesComment": {
          "type": "number",
          "default": 15,
          "minimum": 5,
          "maximum": 50,
          "description": "Maximum lines for comment-to-code completions"
        },
        "aiduino.inlineCompletionMaxLinesSimple": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum lines for simple completions"
        }
      } 
    }   
  },
  "author": {
    "name": "Monster Maker"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/NikolaiRadke/AI.duino"
  },
  "bugs": {
    "url": "https://github.com/NikolaiRadke/AI.duino/issues"
  },
  "homepage": "https://github.com/NikolaiRadke/AI.duino#readme"
}
